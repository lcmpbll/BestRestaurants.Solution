@{
  Layout ="_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>;

<h1>Restaurant</h1>

@if (@Model.Count == 0)
{
  <h3>There are no restaraunts. Anywhere. At all. Not even McDonalds.</h3>
}

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId})</li>
}
<br>
<p class="btn btn-primary">@Html.ActionLink("Register your restaurant", "Create")</p>
<p class="btn btn-primary">@Html.ActionLink("Back to home", "Index", "Home")</p>