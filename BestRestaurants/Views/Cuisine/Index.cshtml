@{
  Layout = "_Layout";
}

@using BestRestaurants.Models; 

<h1>Cuisine</h1>

@if (@Model.Count == 0)
{
  <h3>No cuisine types have been added yet!</h3>
}

<ul>
  @foreach(Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.Name}", "Details", new { id = cuisine.CuisineId })</li>
  }
</ul>
<br>

<p class="btn btn-primary">@Html.ActionLink("Add new cuisine type", "Create")</p>
<p class="btn btn-primary">@Html.ActionLink("Home", "Index", "Home")</p>